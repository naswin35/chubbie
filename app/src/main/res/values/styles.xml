<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style
        name="AppTheme.MontserratLight"
        parent="android:TextAppearance">
        <item
            name="fontPath">fonts/Montserrat-Light.otf
        </item>
    </style>

    <style name="AppTheme.MontserratRegular" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-Light.otf</item>
    </style>

    <style name="AppTheme.MontserratBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-Bold.otf</item>
    </style>

    <style name="AppTheme.ralewayregular" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-Light.otf</item>
    </style>

    <style name="AppTheme.MyriadRegular" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-Light.otf</item>
    </style>

    <style name="AppTheme.RobotoRegular" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-Light.otf</item>
    </style>

    <style name="AppTheme.MyriadProItalics" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-Light.otf</item>
    </style>

    <style name="AppTheme.RobotoMedium" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-Light.otf</item>
    </style>

    <style name="CartItemsListTextViewItemQuantity">
        <item name="android:textSize">@dimen/textview_list_item_quantity_size</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFA500</item>
        <item name="colorControlActivated">#FFA500</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

    </style>
</resources>
