<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/sort_bg">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:paddingTop="1dp"
            android:text="SORT BY"
            android:gravity="center|start"
            android:paddingStart="40dp"

            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f4f2"/>

    <RadioGroup
        android:id="@+id/Sort_group"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="35dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >


        <RadioButton
            android:id="@+id/radio2"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:buttonTint="#ff7033"
            android:textColor="#FF4F4F4F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Price High To Low" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:textColor="#FF4F4F4F"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:buttonTint="#ff7033"
            android:text="Price Low To High" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:buttonTint="#ff7033"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#FF4F4F4F"
            android:text="Name Ascenting" />


        <RadioButton
            android:id="@+id/radio5"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:buttonTint="#ff7033"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#FF4F4F4F"
            android:text="Name Descending" />




    </RadioGroup>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f4f2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/CancelPopUp"
            android:layout_weight="1"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CANCEL"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f2f4f2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/ApplyPopUP"
            android:layout_weight="1"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="APPLY"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>



    </LinearLayout>

    </LinearLayout>

</LinearLayout>