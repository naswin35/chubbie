<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:id="@+id/userImage"
                app:srcCompat="@drawable/proficon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textAppearance="@style/AppTheme.MyriadRegular"
                android:layout_marginTop="10dp"
                android:text="@string/welcome"
                android:textStyle="bold"

                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:id="@+id/Name"
                android:gravity="center"
                android:textAppearance="@style/AppTheme.MyriadRegular"
                android:layout_marginTop="5dp"

                android:textStyle="bold"
                android:layout_marginBottom="45dp"
                android:textSize="20sp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp"

                android:id="@+id/UserDetails"
                android:visibility="gone"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        app:srcCompat="@drawable/ic_smartphone_call"
                        android:layout_height="20dp" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="10dp"
                        android:textSize="15dp"
                        android:id="@+id/number"
                        android:textAppearance="@style/AppTheme.MyriadRegular"

                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        app:srcCompat="@drawable/ic_mail"
                        android:layout_height="20dp" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/white"
                        android:maxWidth="235dp"
                        android:textSize="15dp"
                        android:id="@+id/email"
                        android:textAppearance="@style/AppTheme.MyriadRegular"

                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        app:srcCompat="@drawable/ic_location_show"
                        android:layout_height="20dp" />








            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:id="@+id/log_layout"
                android:visibility="gone"
                android:layout_height="match_parent">

                <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:text="Track Order"-->
                <!--android:textAppearance="@style/AppTheme.MyriadRegular"-->
                <!--android:gravity="center"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:background="@drawable/buttoncurve"-->
                <!--android:layout_height="35dp">-->

                <!--</TextView>-->
                <!--<Space-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_height="wrap_content" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/login_or_register"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/login_button"
                    android:textAppearance="@style/AppTheme.MyriadRegular"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:background="@drawable/buttoncurve"
                    android:layout_height="35dp">

                </TextView>


            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

</LinearLayout>